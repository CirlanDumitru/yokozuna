{cover_enabled, true}.

{erl_opts, [
    debug_info,
    warnings_as_errors,
    {parse_transform, lager_transform},
    {platform_define, "^R[1-9]", no_otp_namespaced_types}
]}.
{deps, [
    {ibrowse, ".*", {git, "git://github.com/cmullaparthi/ibrowse.git", {branch, "master"}}},
    {kvc, ".*", {git, "git://github.com/etrepum/kvc.git", {branch, "master"}}},
    {lager, ".*", {git, "git://github.com/basho/lager.git", {branch, "feature/otp-17"}}},
    {otp_compat, ".*", {git, "git://github.com/tburghart/otp_compat.git", {branch, "master"}}},
    {riak_kv, ".*", {git, "git://github.com/basho/riak_kv.git", {branch, "feature/otp-17"}}}
]}.

{eunit_opts, [verbose]}.

{xref_checks, []}.
{xref_queries, [{"(XC - UC) || (XU - X - B)", []}]}.

{pre_hooks, [{compile, "./tools/grab-solr.sh"}]}.

{plugin_dir, ".rebar_plugins"}.
{plugins, [rebar_test_plugin]}.
{riak_test, [
    {test_paths, ["riak_test"]},
    {test_output, "riak_test/ebin"}
]}.
